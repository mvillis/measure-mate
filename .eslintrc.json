{
  "extends": ["standard", "standard-react"],
  "env": {
    "commonjs": true,
    "browser": true,
    "node": true,
    "jquery": true,
    "es6": true,
    "mocha": true
  },
  "rules": {
    "no-alert": 0,
		"no-bitwise": 0,
		"camelcase": 1,
		"curly": 1,
		"eqeqeq": 0,
		"no-eq-null": 0,
		"guard-for-in": 1,
		"no-empty": 1
  },
  "globals": {
    "jQuery": true,
    "$": true
  }
}
