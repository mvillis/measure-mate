{
  "name": "measure-mate",
  "description": "Simple tool to track maturity assessments.",
  "repository": "https://github.com/rloomans/measure-mate",
  "scripts": {
    "postdeploy": "sh .postdeploy.sh"
  },
  "env": {
    "DJANGO_DEBUG": {
      "required": true
    },
    "DJANGO_SETTINGS_MODULE": {
      "required": true
    },
    "DJANGO_SECRET_KEY": {
      "required": true,
      "generator": "secret"
    }
  },
  "addons": [
    "heroku-postgresql"
  ],
  "buildpacks": [
    {
      "url": "https://github.com/heroku/heroku-buildpack-nodejs.git"
    },
    {
      "url": "https://github.com/heroku/heroku-buildpack-python.git"
    }
  ]
}
